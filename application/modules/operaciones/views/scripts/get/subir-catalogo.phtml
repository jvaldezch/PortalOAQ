<script type="text/javascript">
    
    $("#layout_upload").validate({
        errorPlacement: function (error, element) {
            $(element)
                    .closest("form")
                    .find("#" + element.attr("id"))
                    .after(error);
        },
        errorElement: "span",
        errorClass: "traffic-error",
        rules: {
            idCliente: "required",
            layout: "required"
        },
        messages: {
            idCliente: "Seleccionar cliente",
            layout: "Seleccione un archivo para subir."
        }
    });
    
</script>