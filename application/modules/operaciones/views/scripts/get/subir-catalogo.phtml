<form id="catalog_upload" method="POST" enctype="multipart/form-data">
    <label for="idCliente"><strong>CLIENTE:</strong></label>
    <?php if (isset($this->clientes) && !empty($this->clientes)) { ?>
        <select class="traffic-select-large" name="idCliente" id="idCliente">
